<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="lyricHolder" class="com.jun.prospring5.ch03.collection.LyricHolder" />

    <bean id="injectCollection" class="com.jun.prospring5.ch03.collection.CollectionInjection">
        <property name="map">
            <map>
                <entry key="someValue" value="it's a Friday, we finally made it" />
                <entry key="someBean" value-ref="lyricHolder" />
            </map>
        </property>
        <property name="props">
            <props>
                <prop key="firstName">John</prop>
                <prop key="secondName">Mayer</prop>
            </props>
        </property>
        <property name="set">
            <set>
                <value>I can't believe I get to see your face</value>
                <ref bean="lyricHolder"></ref>
            </set>
        </property>
        <property name="list">
            <list>
                <value>You've been working and I've been waiting</value>
                <ref bean="lyricHolder"></ref>
            </list>
        </property>
    </bean>

</beans>